*
  margin 0
  padding 0
html
  width 100%
  height 100%
body
  display: block ;
  font-family: Arial,Helvetica,sans-serif;
  font-weight: bold;
  background: radial-gradient(ellipse at center, #fff 0, #fff 60%, #f8ffe8 70%, #60c5c5 100%);
  height: 100%;

.fade-enter-active, .fade-leave-active {
  transition: opacity .5s
}
.fade-enter, .fade-leave-to /* .fade-leave-active in <2.1.8 */ {
  opacity: 0
}

body
  display flex
  align-items center

#app
  max-width 800px
  min-width 800px
  margin 0 auto
  height 600px
  background-color rgba(255,255,255,0.8)
  box-shadow 0 0 2px rgba(0,0,0,0.2)
  &>div
    padding 15px
@media screen and (max-width: 800px)
  #app
    min-width 100%
    height 100%


