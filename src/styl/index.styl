@import constant
*
  margin 0
  padding 0
html
  width 100%
  height 100%
body
  font-family: Arial,Helvetica,sans-serif;
  font-weight: bold;
  color  $color-text
  background: radial-gradient(ellipse at center, #fff 0, #fff 60%, #f8ffe8 70%, #60c5c5 100%);
  height: 100%;

.fade-enter-active
  transition: opacity .5s
  opacity 0
  //position absolute
  //top 0
.fade-leave-active
  transition: opacity .5s

  position absolute
  top 0
.fade-enter-to
  //opacity: 0
.fade-enter-to
  opacity: 1

.fade-leave-to
  opacity: 0

.router
  position relative
body
  position: relative
  display flex
  align-items center
[name='app-name']
  position absolute
  left 0
  top 0
  padding 5px 10px


#app
  max-width 1000px
  min-width 1000px
  margin 0 auto
  height 600px
  background-color rgba(255,255,255,0.8)
  box-shadow 0 0 2px rgba(0,0,0,0.2);
  &>div
    height 100%
    .router
      height:calc(100% - 67px);

@media screen and (max-width: 1000px)
  #app
    min-width 100%
    height 100%


