@import "../../styl/constant.styl"
.bookmark-component
  display flex
  background linear-gradient(to bottom, #eaf1ff 0%,#ffffff 20%, #ffffff 100%)

  border-bottom 1px solid #eaf1ff
  a
    padding   8px 15px
    color $color-border-text
    text-decoration none
    border-bottom  3px solid transparent
    transition 0.5s
    display block
    &.android
      color #689f38
    &.router-link-active
      background white
      box-shadow 0 -2px 5px rgba(0,0,0,0.2)
      color $color-bookmark-active
      border-bottom  3px solid $color-bookmark-active
      text-decoration none
    &:hover
      color $color-bookmark-hover
      background-color $color-bookmark-bacggound-hover