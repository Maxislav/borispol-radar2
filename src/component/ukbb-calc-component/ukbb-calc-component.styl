.ukbb-calc-component
  height 100%
  position relative
  background white
  .calc
    padding-top 80px
    float right
    width 32%
    .dist
      .d
        width 20px
        height 20px
  .marker
    cursor pointer
    position absolute
    width 0
    height 0
    background red
    &:active
      cursor move
    .wind-flag
      opacity 0.7
      width 80px
      height 60px
      background: url("../../img/wind-flag.png");
      background-size 100%
      position absolute
      top 0
      &:hover
        opacity 1