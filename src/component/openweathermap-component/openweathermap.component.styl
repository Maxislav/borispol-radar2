.openweathermap-component
  width: 100%
  height 100%
  position relative
  .img-container.relative
    width: 100%
    height 100%
    position relative
    .layer-1, .layer-2{
      left 0
      top 0
      position absolute
      z-index 1
      width 100%
      height 100%
      padding 5px
    }
    .player-component-2
      position absolute
      bottom 0
      left 50%

    .layer-2
      z-index 2
    .img-pen-map, .img-pen-rain
      width 100%
      height 100%
      >img
        position absolute
        left 0
        top 0
        width 100%
        height 100%

