@import "../../../../styl/constant.styl"
.forecast-3h-component
  width 50px
  height 100%
  transition transform 0.2s
  &:hover
    transform scale(1.05,1.05)
    box-shadow 0 0 5px rgba(0, 0, 0, 0.41)
  &>div, &>a
    display block
    text-decoration none
    border-radius 3px
    position relative
    height 100%
    border 1px solid $color-border
    color $color-text
    &.router-link-active
      transform scale(1.05,1.05)
      box-shadow 0 0 5px rgba(0, 0, 0, 0.41)
    .img
      width 48px
      height 48px
      position relative
      img
        display block
        width 100%
        height 100%
        margin-bottom -5px
      img.clouds
        transform-origin 10% 60%
        position absolute
        top 0
        width 100%
    .wind-container
      display flex
      &>*
        white-space nowrap
        font-size 10px
      &>.wind-deg
        display block
        width 20px
        text-align center
        height 20px
        text-decoration none

    .water-container
      margin-top -5px
      width 100%
      height 10px
      overflow hidden
      img
        width 10px
        margin-right  -1.5px
        height 10px

    .time
      text-align center
    .t
      position absolute
      bottom 0
      text-align center
      width 100%


