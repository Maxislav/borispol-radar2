    "sourceMap": true,
    "experimentalDecorators": true
  },
  "target": "es6",
  "typeRoots": [
    "node_modules/@types"
  ],
  "lib": [
    "es2017",
    "dom"
  ],
  "exclude": [
    "server/dist",
    "node_modules"
  ]
}