{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "dom"
    ],
    "typeRoots": ["node_modules/@types", "node_modules/vue/types"],
    "skipLibCheck": true
  },
  "skipLibCheck": true,
  "include": [
    "src/**/*",
    "declaration.d.ts"
  ],
  "exclude": ["node_modules" , "server" , "node_modules/@types/vue" ]
}
